
# ==================== 应用配置====================
APP_NAME=校园直聘平台
APP_VERSION=1.0.0
DEBUG=false

# ==================== 服务器配置 ====================
HOST=0.0.0.0
PORT=5001

# 数据库配置
DATABASE_URL=mysql+pymysql://appuser:your_password@mysql:3306/college_zhaopin?charset=utf8mb4

# ==================== Redis配置====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== JWT配置====================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== OSS配置====================
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET_NAME=your_bucket_name
OSS_REGION=cn-hangzhou

# ==================== 短信配置====================
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=your_sign_name
SMS_TEMPLATE_CODE=your_template_code

# ==================== CORS配置 ====================
CORS_ORIGINS=http://localhost:8008,http://localhost:3000,https://your-domain.com

# ==================== 前端配置====================
FRONTEND_URL=http://localhost:8008


